{
  "name": "zce.github.io",
  "version": "0.1.0",
  "private": true,
  "description": "zce's personal homepage",
  "keywords": [
    "homepage",
    "zce"
  ],
  "homepage": "https://github.com/zce/zce.github.io#readme",
  "bugs": {
    "url": "https://github.com/zce/zce.github.io/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zce/zce.github.io.git"
  },
  "license": "MIT",
  "author": {
    "name": "zce",
    "email": "w@zce.me",
    "url": "https://zce.me"
  },
  "main": "src/index.js",
  "scripts": {
    "lint": "standard --fix && csscomb src",
    "test": "react-scripts test",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "predeploy": "yarn build",
    "deploy": "gh-pages -d build -b master",
    "commit": "git-cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ],
    "*.css": [
      "csscomb src --tty-mode",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "react": "16.9.0",
    "react-dom": "16.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "commitizen": "4.0.3",
    "csscomb": "4.3.0",
    "cz-conventional-changelog": "3.0.2",
    "gh-pages": "2.1.1",
    "husky": "3.0.4",
    "lint-staged": "9.2.3",
    "react-scripts": "3.1.1",
    "standard": "14.0.0"
  }
}
